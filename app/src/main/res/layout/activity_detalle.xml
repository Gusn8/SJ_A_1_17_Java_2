<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main.background"
    tools:context="com.miramicodigo.sj_a_1_17_java_2.DetalleActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_fondo"
        android:layout_margin="@dimen/main.ll.margin"
        android:elevation="@dimen/main.ll.elevation"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/detalle.iv.width.height"
            android:layout_height="@dimen/detalle.iv.width.height"
            android:src="@drawable/ic_person_black_36dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/detalle.et.nombre.textsize"
            android:layout_margin="@dimen/detalle.et.margin"/>
        <TextView
            android:id="@+id/tvApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/detalle.et.nombre.textsize"/>
        <TextView
            android:id="@+id/tvUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/detalle.et.usuario.textsize"
            android:layout_margin="@dimen/detalle.et.margin"/>

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detalle.btn.volver"
            android:background="@color/colorPrimary"
            android:layout_marginRight="@dimen/main.btn.marginright"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main.btn.textsize"
            android:paddingLeft="@dimen/main.btn.paddingleft"
            android:paddingRight="@dimen/main.btn.paddingright"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</LinearLayout>
